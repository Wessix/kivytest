<CustomScreen>:
    id: ScreenmanagerPopupScreen
    hue: 1
    canvas:
        Color:
            hsv: self.hue, .5, .3
        Rectangle:
            size: self.size
            

    Label:
        font_size: 42
        text: root.name

    BoxLayout:
##        size_hint: .5, None
##        height: 250
##        pos_hint: {'center_x': .5}
        orientation: 'vertical'

        Button:
            text: 'Zurueck'
            size_hint: 1, 0.1
            pos_hint: {'top': 1}
            #size: 150, 50
            on_press: root.manager.transition = SlideTransition(direction="up")
            on_release: root.manager.current = root.manager.next()

        Button:
            opacity: 0

        Button:
            text: 'Weiter'
            size_hint: 1, 0.1
            pos_hint: {'bottom': 1}
            #size: 150, 50
            on_press: root.manager.transition = SlideTransition(direction="down")
            on_release: root.manager.current = root.manager.previous()

