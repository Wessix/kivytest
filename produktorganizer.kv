<HSeparatorProduktOrganizer@Widget>:
    id: HSeparatorProduktOrganizer
    seperator_color: [0.8,0.8,0.8,1]
    size_hint_y: None
    height: 2
    canvas:
        Color:
            rgba: self.seperator_color if self.seperator_color else [0.8,0.8,0.8,1]
        Rectangle:
            size: self.width, 2
            pos: self.x, self.center_y
                    
<PopupBildauswaehlenProduktorganizer>
    Popup:
        size_hint: 0.9,0.9
        id: a
        title: 'Bitte Produktbild wählen' 
        #size: ('300dp', '300dp')
        BoxLayout:
            #size_hint: 1,0.9
            #size: root.size
            #pos: root.pos
            orientation: "vertical"
            FileChooserThumbView:
            #FileChooserIconView:
                id: filechooser
                #show_hidden: True
                rootpath: "pictures/"
                thumbsize: 300
                

            BoxLayout:
                size_hint: 1,None
                Button:
                    text: "Verlassen"
                    size_hint: 0.5,None
                    on_release: filechooser.selection = ''
                    on_release: a.dismiss()
                Button:
                    text: "Ok"
                    size_hint: 0.5,None
                    #on_release: print filechooser.path,filechooser.selection
                    #on_release: print ((str(filechooser.selection)).find('/pictures'))
                    on_release: filechooser.selection = filechooser.selection
                    on_release: a.dismiss()
                    
