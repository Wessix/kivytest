<HSeparatorProduktOrganizer@Widget>:
    id: HSeparatorProduktOrganizer
    seperator_color: [0.8,0.8,0.8,1]
    size_hint_y: None
    height: 2
    canvas:
        Color:
            rgba: self.seperator_color if self.seperator_color else [0.8,0.8,0.8,1]
        Rectangle:
            size: self.width, 2
            pos: self.x, self.center_y

