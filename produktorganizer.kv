<PopupBildAuswaehlenProduktorganizer>
    rootpath: "pictures/"
    title: 'Bitte Produktbild waehlen'
    
    Popup:
        
        size_hint: 0.9,0.9
        id: a
        title: root.title
        #size: ('300dp', '300dp')
        BoxLayout:
            id: LayoutPopup
            
            #size_hint: 1,0.9
            #size: root.size
            #pos: root.pos
            orientation: "vertical"
            FileChooserThumbView:
            #FileChooserIconView:
                id: filechooser
                #show_hidden: True
                #rootpath: "pictures/"
                rootpath: root.rootpath
                thumbsize: 300
                

            BoxLayout:
                
                size_hint: 1,None
                Button:
                    text: "Verlassen"
                    size_hint: 0.5,None
                    on_release: filechooser.selection = ''
                    on_release: a.dismiss()
                Button:
                    id: OkButtonFilechooser
                    text: "Ok"
                    size_hint: 0.5,None
                    #on_release: print filechooser.path,filechooser.selection
                    #on_release: print ((str(filechooser.selection)).find('/pictures'))
                    on_release: filechooser.selection = filechooser.selection
                    on_release: a.dismiss()
                    
